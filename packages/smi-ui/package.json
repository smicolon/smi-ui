{
  "name": "@smicolon/smi-ui",
  "version": "0.1.0",
  "description": "Professional UI components with animations and app building blocks",
  "license": "MIT",
  "author": "Smicolon",
  "repository": {
    "type": "git",
    "url": "https://github.com/smicolon/smi-ui"
  },
  "homepage": "https://smi-ui.smicolon.dev",
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwindcss",
    "framer-motion",
    "shadcn",
    "design-system",
    "animations"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs"
    },
    "./motion": {
      "types": "./dist/motion/index.d.ts",
      "import": "./dist/motion/index.mjs"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.mjs"
    },
    "./lib/utils": {
      "types": "./dist/lib/utils.d.ts",
      "import": "./dist/lib/utils.mjs"
    }
  },
  "files": [
    "dist",
    "registry",
    "registry.json"
  ],
  "bin": {
    "smi-ui": "./bin/smi-ui.mjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src registry --ext .ts,.tsx",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.57.0",
    "framer-motion": "^11.0.0",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "framer-motion": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}