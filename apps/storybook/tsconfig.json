{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@smicolon/smi-ui": ["../../packages/smi-ui/src"],
      "@smicolon/smi-ui/*": ["../../packages/smi-ui/src/*"],
      "@smi-ui/ui/*": ["../../packages/smi-ui/registry/ui/*"],
      "@smi-ui/blocks/*": ["../../packages/smi-ui/registry/blocks/*"],
      "@smi-ui/effects/*": ["../../packages/smi-ui/registry/effects/*"]
    }
  },
  "include": ["src", "stories", ".storybook"]
}
