{
  "name": "smi-ui-monorepo",
  "private": true,
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": ">=22"
  },
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "turbo run build",
    "build:pages": "turbo run build --filter=smi-ui-docs --filter=smi-ui-storybook && cp -r apps/storybook/storybook-static apps/docs/out/components",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "storybook": "bun run --cwd apps/storybook dev",
    "build-storybook": "bun run --cwd apps/storybook build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "turbo": "^2.3.0",
    "typescript": "^5.4.0",
    "prettier": "^3.2.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  }
}